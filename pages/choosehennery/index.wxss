/* index.wxss */
.sel_li{background: #fff; border-radius: 10rpx; margin-top: 15px; overflow: hidden;}
.sel_li .hea{padding: 15rpx;}
.sel_li .lef{display: block; width: 65rpx; height: 65rpx; float: left;}
.sel_li .tex{float: left; margin-left: 15rpx; width: 600rpx;}
.sel_li .tex .tit{float: left; color: #333; font-weight: bold;}
.sel_li .tex .at{float: right;}
.sel_li .tex .fo{padding-top: 15rpx;}
.sel_li .vid image{width: 100%; height: 470rpx; display: block;}
.sel_li .min_vid{padding: 18rpx 0;}
.sel_li .min_vid .img{width: 218rpx; float: left; position: relative;margin-right: 20rpx;}
.sel_li .min_vid .img text{position: absolute; top:0; left: 0; display: block; width: 100%; text-align: center; height: 155rpx; line-height: 155rpx; background: rgba(0,0,0,0.5); color: #fff; font-size: 26rpx;}
.sel_li .min_vid image{width: 100%;height: 155rpx; display: block; }
.sel_li .min_vid .img:nth-child(3n){margin-right: 0;}

.li_btn{height: 98rpx; width: 100%; background: #3292ff; text-align: center;}
.li_btn .btn_con{display: inline-block; padding-top: 27rpx;}
.li_btn .btn_con .icon{float: left; width: 42rpx; height: 42rpx;}
.li_btn .btn_con text{color: #fff; float: left;margin-top: 27rxp; line-height: 42rpx; padding-left: 10rpx; font-size: 36rpx;}

















